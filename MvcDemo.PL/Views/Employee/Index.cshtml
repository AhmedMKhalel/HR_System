@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />

<a asp-action="Create" class="btn btn-primary ">Create New Employee </a>

<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Name" name="SearchValue" class="form-control" />

        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>

    </div>

</form>

@if (Model.Count() > 0)
{

    <table class="table table-hover table-striped ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(emp=>emp.Name)</th>
                <th>@Html.DisplayNameFor(emp=>emp.Age)</th>
                <th>Photo</th>
                <th>@Html.DisplayNameFor(emp=>emp.Address)</th>
                <th>@Html.DisplayNameFor(emp=>emp.Email)</th>
                <th>@Html.DisplayNameFor(emp=>emp.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(emp=>emp.Salary)</th>
                <th>@Html.DisplayNameFor(emp=>emp.HireDate)</th>
                <th>@Html.DisplayNameFor(emp=>emp.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(emp=>employee.Name)</td>
                    <td>@Html.DisplayFor(emp=>employee.Age)</td>
                    <td>
                        <img src="~/Files/Images/@employee.ImageUrl" class="img-thumbnail" style="max-height: 100px; max-width: 100px;" />
                    </td>
                    <td>@Html.DisplayFor(emp=>employee.Address)</td>
                    <td>@Html.DisplayFor(emp=>employee.Email)</td>
                    <td>@Html.DisplayFor(emp=>employee.PhoneNumber)</td>
                    <td>@Html.DisplayFor(emp=>employee.Salary)</td>
                    <td>@Html.DisplayFor(emp=>employee.HireDate)</td>
                    <td>@Html.DisplayFor(emp=>employee.IsActive)</td>
                    <partial name="_ButtonsViewPartial" model="@employee.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>


}
else
{
    <div class="alert-danger" mt-5>
        <h3>
            No Employees Found
        </h3>
    </div>
}