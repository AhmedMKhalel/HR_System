@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />
<br />



<form class="my-3" asp-action="Index" asp-controller="Users">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Email" name="SearchValue" class="form-control" />

        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>

    </div>

</form>

@if (Model?.Count() > 0)
{

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(user=>user.Id)</th>
                <th>@Html.DisplayNameFor(user=>user.UserName)</th>
                <th>@Html.DisplayNameFor(user=>user.Email)</th>
                <th>@Html.DisplayNameFor(user=>user.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(user=>user.IsAgree)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                @if (user != null)
                {

                    <tr>
                        <td>@Html.DisplayFor(u=>user.Id)</td>
                        <td>@Html.DisplayFor(u=>user.UserName)</td>
                        <td>@Html.DisplayFor(u=>user.Email)</td>
                        <td>@Html.DisplayFor(u=>user.PhoneNumber)</td>
                        <td>@Html.DisplayFor(u=>user.IsAgree)</td>
                        <partial name="_ButtonsViewPartial" model="@user.Id.ToString()" />

                    </tr>
                }
                else
                {
                    <div class="alert-danger" mt-5>
                        <h3>
                            No Users Found
                        </h3>
                    </div>
                }
            }
        </tbody>
    </table>


}
else
{
    <div class="alert-danger" mt-5>
        <h3>
            No Users Found
        </h3>
    </div>
}