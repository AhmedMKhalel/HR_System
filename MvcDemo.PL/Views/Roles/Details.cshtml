@model IdentityRole
@{
    ViewData["Title"] = "Details";
}

<h1>Role Details</h1>
<br/>
<br/>
<div class="row">
    <div class="col-12">
        <form asp-action="Create" asp-controller="Roles">
            <div class="form-group">
                <label asp-for ="@Model.Id" class="col-form-label"></label>
                <input asp-for ="@Model.Id" class="form-control"  />
                
            </div>
            
            <div class="form-group">
                <label asp-for ="@Model.Name" class="col-form-label"></label>
                <input asp-for ="@Model.Name" class="form-control" readonly />
                
            </div>
            <br/>
            
           
            <a asp-action="Update" class="btn btn-success" asp-route-id="@Model.Id" >Edit</a>
            <a asp-action="Index" class="btn btn-light" >Back To List</a>

        </form>

    </div>

</div>