@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<style>

</style>

<h1>All Roles</h1>
<br/>

<a asp-action="Create" class="btn btn-primary ">Create New Role </a>

@if (Model?.Count() > 0)
{

    <table class="table table-hover table-striped mt-3 ">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var IdRole in Model)
        {
            <tr>
                <td>@IdRole.Id</td>
                <td>@IdRole.Name</td>
                <partial name="_ButtonsViewPartial" model="@IdRole.Id.ToString()" />
            </tr>
        }
        </tbody>
    </table>


}
else
{
    <div class="alert alert-warning" mt-7>
        <h3>
            No Roles Found!!
        </h3>
    </div>
}