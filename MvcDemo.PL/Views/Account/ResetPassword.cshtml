@model ResetPasswordViewModel
<section class="vh-90 gradient-custom mb-3">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>
                            <form asp-action="ResetPassword">
                                <input type="hidden" asp-for="Email" />
                                <input type="hidden" asp-for="Token" />
                                <div class="form-outline form-white mb-4 mt-3">
                                    <label class="form-label" asp-for="Password" for="typePasswordX"></label>
                                    <input type="password" id="typePasswordX" asp-for="Password" placeholder="password" class="form-control form-control-lg" required="" />
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="form-outline form-white mb-4 mt-3">
                                    <label class="form-label" asp-for="ConfirmPassword" for="typePasswordX"></label>
                                    <input type="password" id="typePasswordX" asp-for="ConfirmPassword" placeholder="confirm password" class="form-control form-control-lg" required="" />
                                    <span asp-validation-for="ConfirmPassword"></span>
                                </div>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Reset Password</button>
                            </form>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}